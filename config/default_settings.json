{
  "version": "1.0.0",
  "platform": {
    "name": "OSS Learning Platform",
    "description": "Automated OSS codebase analysis with Notion integration"
  },
  "analysis": {
    "default_commit": "HEAD",
    "timeout_seconds": 300,
    "max_file_size_mb": 10,
    "exclude_patterns": [
      "node_modules",
      "venv",
      ".git",
      "__pycache__",
      "dist",
      "build",
      ".next",
      "coverage"
    ]
  },
  "notion": {
    "auto_export": true,
    "page_template": "analysis",
    "database_properties": {
      "Repository": "url",
      "Commit": "rich_text",
      "Analysis Date": "date",
      "Status": "select",
      "Architecture Pattern": "multi_select"
    }
  },
  "mcp_servers": {
    "required": [
      "github",
      "notion"
    ],
    "optional": [
      "brave-search"
    ],
    "built_in": [
      "serena",
      "context7",
      "sequential"
    ]
  },
  "output": {
    "formats": [
      "mermaid",
      "json",
      "markdown"
    ],
    "temp_directory": "/tmp/oss_analysis"
  }
}
